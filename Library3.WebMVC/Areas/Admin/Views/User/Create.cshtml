@using Library3.WebMVC.Areas.Admin.Models.DTOs
@model UserCreateDTO


<!-- Start Blog Section -->
<div class="card">
    <div class="card-header">
        <h3>Add User</h3>
    </div>
    <div class="card-body">
        <div asp-validation-summary="ModelOnly" class="d-flex justify-content-center text-danger"></div>
        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="@Model.RoleId" class="form-label">Role</label>
                <select asp-for="@Model.RoleId" class="form-control" asp-items="@ViewBag.Roles">
                    <option value="">Select</option>
                </select>
                <span asp-validation-for="@Model.RoleId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.UserName" class="form-label">User Name</label>
                <input asp-for="@Model.UserName" class="form-control">
                <span asp-validation-for="@Model.UserName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Email" class="form-label">Email</label>
                <input asp-for="@Model.Email" class="form-control">
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.EmailConfirmed" class="form-label">Email Confirmed</label>
                <select asp-for="@Model.EmailConfirmed" class="form-control">
                    <option value="false">No</option>
                    <option value="true">Yes</option>
                </select>
                <span asp-validation-for="@Model.EmailConfirmed" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Password" class="form-label">Password</label>
                <input asp-for="@Model.Password" class="form-control">
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.RePassword" class="form-label">RePassword</label>
                <input asp-for="@Model.RePassword" class="form-control">
                <span asp-validation-for="@Model.RePassword" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Gender" class="form-label">Gender</label>
                <select asp-for="@Model.Gender" class="form-control">
                    <option value="">Select</option>
                    <option value="Male">Male</option>
                    <option value="Femela">Female</option>
                    <option value="Other">Other</option>
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.TcNo" class="form-label">Tc No</label>
                <input asp-for="@Model.TcNo" class="form-control">
                <span asp-validation-for="@Model.TcNo" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.PhoneNumber" class="form-label">Phone Number</label>
                <input asp-for="@Model.PhoneNumber" class="form-control">
                <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.PhoneNumberConfirmed" class="form-label">Phone Number Confirmed</label>
                <select asp-for="@Model.PhoneNumberConfirmed" class="form-control">
                    <option value="false">No</option>
                    <option value="true">Yes</option>
                </select>
                <span asp-validation-for="@Model.PhoneNumberConfirmed" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.TwoFactorEnabled" class="form-label">Two Factor Enabled</label>
                <select asp-for="@Model.TwoFactorEnabled" class="form-control">
                    <option value="false">No</option>
                    <option value="true">Yes</option>
                </select>
                <span asp-validation-for="@Model.TwoFactorEnabled" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.LockoutEnabled" class="form-label">Lockout Enabled</label>
                <select asp-for="@Model.LockoutEnabled" class="form-control">
                    <option value="false">No</option>
                    <option value="true">Yes</option>
                </select>
                <span asp-validation-for="@Model.LockoutEnabled" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.AccessFailedCount" class="form-label">Access Failed Count</label>
                <input asp-for="@Model.AccessFailedCount" class="form-control">
                <span asp-validation-for="@Model.AccessFailedCount" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-success">Save</button>
                <button type="reset" class="btn btn-success">Reset</button>
            </div>
            <a class="btn btn-primary" asp-action="Index">Back</a>
        </form>
    </div>
</div>
<!-- End Blog Section -->
