@model Library3.Entity.Concrete.Sale


<!-- Start Blog Section -->
<div class="card">
    <div class="card-header">
        <h3>Are You Sure?</h3>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>
    <div class="card-body">
        <form asp-action="Delete" method="post">
            <div class="mb-3">
                <label asp-for="@Model.Book.BookName" class="form-label">Book Name:</label>
                <p>
                    @Html.DisplayFor(model => model.Book.BookName)
                </p>
                <label asp-for="@Model.Book.Title" class="form-label">Book Title:</label>
                <p>
                    @Html.DisplayFor(model => model.Book.Title)
                </p>
                <label asp-for="@Model.Book.Author." class="form-label">Book Author:</label>
                <p>

                    @Html.DisplayFor(model => model.Book.Author)
                </p>
            </div>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a class="btn btn-primary" asp-action="SaleIndex">Back</a>
            </form>
        </form>
    </div>
</div>
<!-- End Blog Section -->

