<!-- Start Hero Section -->
<div class="hero">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-5">
                <div class="intro-excerpt">
                    <h1>Instrument <span clsas="d-block">Shopping Site</span></h1>
                    <p class="mb-4">The best books in the world at the most affordable prices.</p>
                </div>
            </div>
            <div class="col-lg-5">
                <div class="intro-excerpt">
                    @if (ViewData["UserName"] != null)
                    {
                        <h1>@ViewData["UserName"]<span clsas="d-block"></span></h1>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Hero Section -->
<!-- Start Sale Product Section -->
<div class="product-section">
    <div class="container">

        <h2 class="section-title">Books On Sale</h2>
        <!-- Start Column 1 -->
        <partial name="_MemberSaleIndex"></partial>
        <!-- End Column 1 -->
    </div>
</div>
<!-- End Sale Product Section -->
<!-- Start Blog Section -->
<div class="why-choose-section">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-12">
                <h2 class="section-title">Why Choose Us</h2>
                <div class="row my-5">
                    <div class="col-3 col-md-3">
                        <div class="feature">
                            <div class="icon">
                                <img src="~/assets_homepage/images/truck.svg" alt="Image" class="imf-fluid">
                            </div>
                            <h3>Fast &amp; Free Shipping</h3>
                        </div>
                    </div>
                    <div class="col-3 col-md-3">
                        <div class="feature">
                            <div class="icon">
                                <img src="~/assets_homepage/images/bag.svg" alt="Image" class="imf-fluid">
                            </div>
                            <h3>Easy to Shop</h3>
                        </div>
                    </div>
                    <div class="col-3 col-md-3">
                        <div class="feature">
                            <div class="icon">
                                <img src="~/assets_homepage/images/support.svg" alt="Image" class="imf-fluid">
                            </div>
                            <h3>24/7 Support</h3>
                        </div>
                    </div>
                    <div class="col-3 col-md-3">
                        <div class="feature">
                            <div class="icon">
                                <img src="~/assets_homepage/images/return.svg" alt="Image" class="imf-fluid">
                            </div>
                            <h3>Hassle Free Returns</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Blog Section -->
