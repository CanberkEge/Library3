@using Library3.Entity.Concrete
@model IEnumerable<Book>

<!-- Start Hero Section -->
<div class="container text-center">
    <div class="intro-excerpt">
        <br />
        <h1>Products<span clsas="d-block"></span></h1>
    </div>
</div>
<!-- End Hero Section -->
<!-- Start Blog Section -->
<div class="product-section">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-12 col-md-4 col-lg-3 mb-5 mb-md-0">
                    <a class="product-item" href="cart.html">
                        <img src="/images_product/@item.BookPhotoName" class="img-fluid product-thumbnail">
                        <h3 class="product-title">@item.BookName</h3>
                        <strong class="product-price">@item.Price$</strong>

                        <span class="icon-cross">
                            <img src="~/assets_homepage/images/cross.svg" class="img-fluid">
                        </span>
                    </a>
                </div>
            }
        </div>
    </div>
</div>
<!-- End Blog Section -->
