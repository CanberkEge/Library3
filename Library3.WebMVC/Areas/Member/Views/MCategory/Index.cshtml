@using Library3.Entity.Concrete;
@model IEnumerable<Category>


<!-- Start Hero Section -->
<div class="container text-center">
    <div class="intro-excerpt">
        <br />
        <h1>Categories<span clsas="d-block"></span></h1>
    </div>
</div>
<!-- End Hero Section -->
<!-- Start Blog Section -->
<div class="blog-section">
    <div class="container">
        <div class="row justify-content-between">
            @foreach (var item in Model)
            {
                <div class="col-12 col-sm-6 col-md-6 mb-5">
                    <div class="post-entry">
                        <a asp-area="" asp-controller="Category" asp-action="ProductInCategory" class="post-thumbnail" asp-route-categoryId="@item.Id" data-categoryid="@item.Id">
                            <img src="/images_category/@item.CategoryPhotoName" style="max-height: 300px;">
                        </a>
                        <div class="post-content-entry">
                            <h3><a asp-area="" asp-controller="Category" asp-action="BookInCategory">@item.CategoryName</a></h3>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- End Blog Section -->
<!-- Start Script Section -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const thumbnails = document.querySelectorAll(".post-thumbnail");
        thumbnails.forEach(function (thumbnail) {
            thumbnail.addEventListener("click", function () {
                const Id = this.getAttribute("data-categoryid");
                console.log("Selected categoryId: " + Id);
            });
        });
    });
</script>
<!-- End Script Section -->

