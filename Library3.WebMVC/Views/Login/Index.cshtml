@using Library3.WebMVC.Models.DTO_s;
@model LoginDTO



<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <meta name="description" content="">
        <meta name="author" content="">

        <title>Italian Library - Sign In Page</title>

        <!-- CSS FILES -->
        <link rel="preconnect" href="https://fonts.googleapis.com">

        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100;300;400;700;900&display=swap" rel="stylesheet">

    <link href="~/Free_Template_Home/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Free_Template_Home/css/bootstrap-icons.css" rel="stylesheet">

    <link rel="stylesheet" href="~/Free_Template_Home/css/slick.css" />

    <link href="~/Free_Template_Home/css/tooplate-little-fashion.css" rel="stylesheet">
        
<!--

Tooplate 2127 Little Fashion

https://www.tooplate.com/view/2127-little-fashion

-->
    </head>
    
    <body>

        <section class="preloader">
            <div class="spinner">
                <span class="sk-inner-circle"></span>
            </div>
        </section>
    
        <main>

            <section class="sign-in-form section-padding">
                <div class="container">
                    <div class="row">

                        <div class="col-lg-8 mx-auto col-12">

                            <h1 class="hero-title text-center mb-5">Sign In</h1>

                            <div class="row">
                                <div class="col-lg-8 col-11 mx-auto">

                                <div asp-validation-summary="ModelOnly" class="form-floating mb-4 p-0"></div>
                                    <form asp-area="Default" asp-controller="Login" method="post">

                                        <div class="form-floating mb-4 p-0">
                                            <input asp-for="Email" type="text" name="email" id="email" pattern="^ *^ *" class="form-control" placeholder="Email address" required>
                                        <span asp-validation-for="Email" class="focus-input100" data-placeholder="&#xe80f;"></span>


                                            <label for="email">Email address</label>
                                        </div>

                                        <div class="form-floating p-0">
                                            <input asp-for="Password" type="password" name="password" id="password" class="form-control" placeholder="Password" required>
                                        <span asp-validation-for="Password" class="input100" data-placeholder="&#xe80f;"></span>
                                            <label for="password">Password</label>
                                        </div>

                                        <button type="submit" class="btn custom-btn form-control mt-4 mb-3">
                                            Sign in
                                        </button>

                                    <p class="text-center">Don’t have an account? <a class="btn custom-btn form-control mt-4 mb-3" asp-area="Default" asp-controller="Login" asp-action="Register">Create One</a></p>

                                    </form>
                                </div>
                            </div>
                            
                        </div>

                    </div>
                </div>
            </section>

        </main>

        <footer class="site-footer">
            <div class="container">
                <div class="row">

                    <div class="col-lg-3 col-10 me-auto mb-4">
                    <h4 class="text-white mb-3"><a asp-area="Default" asp-controller="Home" asp-action="Index">Italian</a> Library</h4>
                        <p class="copyright-text text-muted mt-lg-5 mb-4 mb-lg-0">Copyright © 2022 <strong>Italian Library</strong></p>
                        <br>
                        <p class="copyright-text">Designed by <a href="https://www.tooplate.com/" target="_blank">Tooplate</a></p>
                    </div>

                    <div class="col-lg-5 col-8">
                        <h5 class="text-white mb-3">Sitemap</h5>

                        <ul class="footer-menu d-flex flex-wrap">
                        <li class="footer-menu-item"><a asp-area="Default" asp-controller="Home" asp-action="About" class="footer-menu-link">About Us</a></li>

                        <li class="footer-menu-item"><a asp-area="Default" asp-controller="Book" asp-action="Index" class="footer-menu-link">Books</a></li>

                        <li class="footer-menu-item"><a asp-area="Default" asp-controller="Category" asp-action="Index" class="footer-menu-link">Categories</a></li>


                        <li class="footer-menu-item"><a href="#" class="footer-menu-link">Privacy policy</a></li>

                        <li class="footer-menu-item"><a asp-area="Default" asp-controller="Home" asp-action="FAQ" class="footer-menu-link">FAQs</a></li>


                        <li class="footer-menu-item"><a asp-area="Default" asp-controller="Home" asp-action="Contact" class="footer-menu-link">Contact</a></li>
                        </ul>
                    </div>

                    <div class="col-lg-3 col-4">
                        <h5 class="text-white mb-3">Social</h5>

                        <ul class="social-icon">

                            <li><a href="#" class="social-icon-link bi-youtube"></a></li>

                            <li><a href="#" class="social-icon-link bi-whatsapp"></a></li>

                            <li><a href="#" class="social-icon-link bi-instagram"></a></li>

                            <li><a href="#" class="social-icon-link bi-skype"></a></li>
                        </ul>
                    </div>

                </div>
            </div>
        </footer>

        <!-- JAVASCRIPT FILES -->
    <script src="~/Free_Template_Home/js/jquery.min.js"></script>
    <script src="~/Free_Template_Home/js/bootstrap.bundle.min.js"></script>
        <script src="~/Free_Template_Home/js/Headroom.js"></script>
    <script src="~/Free_Template_Home/js/jQuery.headroom.js"></script>
    <script src="~/Free_Template_Home/js/slick.min.js"></script>
    <script src="~/Free_Template_Home/js/custom.js"></script>

    </body>
</html>
